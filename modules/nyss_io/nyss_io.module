  if (!empty($l['gender'])) {
    $gender_key = 'gender';
  }
  elseif (!empty($l['gender_id'])) {
    $gender_key = 'gender_id';
  }

  if (!empty($gender_key)) {
    switch ($l[$gender_key]) {
      case 'M':
        $l['gender'] = 'Male';
        break;
      case 'F':
        $l['gender'] = 'Female';
        break;
    }

    $l['gender_id'] = $aGender[$l['gender']];

    //remove text value
    unset($l['gender']);
  }
