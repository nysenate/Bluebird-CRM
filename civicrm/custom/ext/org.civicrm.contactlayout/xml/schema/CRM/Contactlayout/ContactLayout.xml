<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Contactlayout</base>
  <class>ContactLayout</class>
  <name>civicrm_contact_layout</name>
  <comment>Layouts for the contact summary page</comment>
  <add>1.0</add>
  <log>true</log>
  <title>Contact Summary Layout</title>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique ContactLayout ID</comment>
    <add>1.0</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>label</name>
    <title>Label</title>
    <required>true</required>
    <type>varchar</type>
    <length>255</length>
    <comment>Name of this layout.</comment>
    <add>1.0</add>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>contact_type</name>
    <title>Contact Type</title>
    <type>varchar</type>
    <length>255</length>
    <comment>The type of contacts this layout applies to.</comment>
    <pseudoconstant>
      <table>civicrm_contact_type</table>
      <keyColumn>name</keyColumn>
      <labelColumn>label</labelColumn>
      <condition>parent_id IS NULL</condition>
    </pseudoconstant>
    <add>1.0</add>
    <html>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>contact_sub_type</name>
    <title>Contact Subtype</title>
    <type>varchar</type>
    <length>255</length>
    <comment>The contacts subtypes this layout applies to.</comment>
    <pseudoconstant>
      <table>civicrm_contact_type</table>
      <keyColumn>name</keyColumn>
      <labelColumn>label</labelColumn>
      <condition>parent_id IS NOT NULL</condition>
    </pseudoconstant>
    <serialize>SEPARATOR_BOOKEND</serialize>
    <add>1.0</add>
    <html>
      <type>Select</type>
      <multiple>1</multiple>
    </html>
  </field>

  <field>
    <name>groups</name>
    <title>Groups</title>
    <type>varchar</type>
    <length>255</length>
    <comment>Show layout to users belonging to these groups.</comment>
    <add>1.0</add>
    <pseudoconstant>
      <table>civicrm_group</table>
      <keyColumn>id</keyColumn>
      <labelColumn>title</labelColumn>
    </pseudoconstant>
    <serialize>SEPARATOR_BOOKEND</serialize>
    <html>
      <type>Select</type>
      <multiple>1</multiple>
    </html>
  </field>

  <field>
    <name>weight</name>
    <title>Order</title>
    <type>int</type>
    <add>1.0</add>
    <default>0</default>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>blocks</name>
    <type>longtext</type>
    <comment>Contains json encoded layout blocks.</comment>
    <add>1.0</add>
    <serialize>JSON</serialize>
    <required>true</required>
  </field>

  <field>
    <name>tabs</name>
    <type>longtext</type>
    <comment>Contains json encoded layout tabs.</comment>
    <add>1.2</add>
    <serialize>JSON</serialize>
  </field>

</table>
